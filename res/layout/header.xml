<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFf9f9f9" >

    <View
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#fffafafa" />

    <com.wisemandesigns.android.widgets.CircularImageView
        android:id="@+id/imageView1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/me" />

    <com.kyler.l.mms.design.tests.MyTextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/email"
        android:textColor="#ff707070"
        android:layout_marginLeft="12dp"
        android:textSize="14.0sp"
        customfontdemo:fontName="Roboto-Light.ttf"
        tools:ignore="RtlSymmetry" />

    <com.kyler.l.mms.design.tests.MyTextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/name"
        android:textColor="#ff303030"
        android:layout_marginLeft="12dp"
        android:textSize="18.0sp"
        customfontdemo:fontName="Roboto-Bold.ttf"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>
