<resources>

    <style name="HangoutsUITheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/HangoutsUITheme.ActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/HangoutsUITheme.Widget</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <style name="HangoutsUITheme.Widget" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorHint">@color/hangouts_theme_widget_text_color</item>
        <item name="android:textColor">@color/hangouts_theme_widget_text_color</item>
        <item name="android:background">@color/hangouts_theme_widget_background_color</item>
    </style>

    <style name="HangoutsUITheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/hangouts_theme_actionbar_color</item>
        <item name="android:titleTextStyle">@style/HangoutsUITheme.ActionBar.TitleTextStyle</item>
        <item name="android:height">58.0dip</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:backgroundStacked">@color/hangouts_theme_actionbar_color</item>
        <item name="android:backgroundSplit">@color/hangouts_theme_actionbar_color</item>
    </style>

    <style name="GoogleNavDrawer.MainSectionText" parent="android:TextAppearance.Medium">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">21sp</item>
        <item name="android:minHeight">@dimen/main_section_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="GoogleNavDrawer.SecondarySectionText" parent="GoogleNavDrawer.MainSectionText">
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">@dimen/secondary_section_item_height</item>
    </style>

    <style name="HangoutsUITheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColorHint">@color/hangouts_theme_actionbar_titletextstyle_colorhint</item>
        <item name="android:textColor">@color/hangouts_theme_actionbar_titletextstyle_text_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    
  <style name="HangoutsUITheme.ActionBar.Tab" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab</item>
    </style>
    
    <style name="ActionBarTabStyle.Example" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>  

</resources>